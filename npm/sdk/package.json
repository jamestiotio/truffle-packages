{
  "name": "@trufflehq/sdk",
  "version": "0.0.3",
  "description": "The official javascript SDK for Truffle",
  "keywords": [
    "truffle",
    "truffle.tv"
  ],
  "author": "",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build:esm": "tsc -p tsconfig/tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig/tsconfig.cjs.json",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "watch": "npm run watch:esm",
    "watch:esm": "tsc -p tsconfig/tsconfig.esm.json --watch",
    "watch:cjs": "tsc -p tsconfig/tsconfig.cjs.json --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@trufflehq/jumper": "^0.1.0"
  }
}
