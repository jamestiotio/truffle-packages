{
  "name": "@trufflehq/sdk",
  "version": "0.0.4",
  "description": "The official javascript SDK for Truffle",
  "keywords": [
    "truffle",
    "truffle.tv"
  ],
  "author": "",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build:esm": "tsc -p tsconfig/tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig/tsconfig.cjs.json",
    "build": "npm run clean && npm run build:esm ; npm run build:cjs",
    "watch": "npm run watch:cjs",
    "watch:esm": "tsc -p tsconfig/tsconfig.esm.json --watch",
    "watch:cjs": "tsc -p tsconfig/tsconfig.cjs.json --watch",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.2.6",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@trufflehq/jumper": "^0.1.0",
    "@urql/core": "^3.1.1",
    "@urql/exchange-auth": "^1.0.0",
    "graphql": "^16.6.0",
    "wonka": "^6.1.2"
  }
}
